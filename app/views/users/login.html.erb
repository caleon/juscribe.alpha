<% form_for :user, @user, :html => { :id => 'login-form' } do |f| %>
	<fieldset>
		<legend>Login</legend>
		
		<%= f.label :nick %><br />
		<%= f.text_field :nick %>
		<%= error_message_on @user, 'nick' %>
		<br />
		<%= f.label :password %><br />
		<%= f.password_field :password %>
		<%= error_message_on @user, 'password' %>
		<br />
		<%= f.submit 'Login', :disable_with => 'Please wait...' %>
	</fieldset>
<% end %>
