<div class="sub navigation">
	<ul class="navigationList">
	<% if logged_in? && @user && !@user.new_record? %>
		<%= navi_el(@user.nick, @user) %>
	<% end %>
	<% if @user && !@user.new_record? %>
		<%= navi_el "Friends", friends_user_path(@user) %>
		<%= navi_el "Articles", articles_path(@user) %>
		<%= navi_el "Events", user_events_path(@user) %>
		<%= navi_el "Pictures", user_gallery_path(@user) %>
	<% end %>
<% if logged_in? && @user && !@user.new_record? %>
	<% if !this_is_viewer? %>
		<%= navi_el "Message", new_message_path %>
	<% else %>
		<%= navi_el "Inbox", messages_path %>
	<% end %>
	<% if viewer.friends_with?(@user) %>
		<%= navi_el "Unfriend", unfriend_user_path(@user), { :method => :put } %>
	<% elsif @viewer != @user && !@viewer.kinda_friends_with?(@user) %>
		<%= navi_el "Request Friendship", befriend_user_path(@user), { :method => :put } %>
	<% end %>
	<% if @user.editable_by?(viewer) %>
		<%= navi_el 'Preferences', edit_user_path(@user) %>
		<%= navi_el "Account", edit_password_user_path(@user) %>
	<% end %>
<% end %>
	</ul>
</div>
