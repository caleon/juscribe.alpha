<% form_for :article, @article, :url => article_path_for(@article), :html => { :class => 'articleForm', :method => :put, :multipart => true } do |f| %>
	<fieldset>
		<legend>Edit your article</legend>
		<%= render :partial => 'articles/form', :locals => { :f => f } %>
	</fieldset>
<% end %>
<%= button_to 'Delete', article_path_for(@article), :method => :delete %>
