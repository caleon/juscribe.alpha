<% content_tag_for tag ||= :li, article_line, prefix ||= nil, :class => ['article_line', append_class ||= nil].compact.join(' ') do %>
	<span>
		<% if with_blog ||= false %>
			<span class="articleBlog"><%= link_to article_line.blog.short_name, blog_path_for(article_line.blog) %></span>
		<% end %>
		<%= link_to article_line.title, article_path_for(article_line) %>
		<% if with_author ||= false %>
			 <nobr>by <%= link_to article_line.author.display_name, article_line.author %></nobr> 
		<% end %>
		<% if with_time ||= false %>
		 <nobr><span class="timeago"><%= time_ago_in_words(article_line.updated_at) %></span></nobr>
		<% end %>
	</span>
	<% unless without_excerpt ||= false %>
		<%= strip_tags truncate(article_line.content, 35) %>
	<% end %>
<% end %>