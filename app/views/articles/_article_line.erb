<% content_tag tag ||= :li, :class => 'article_line' do %>
	<span>
		<% if with_blog ||= false %>
			<span class="articleBlog"><%= article_line.blog.short_name %></span>
		<% end %>
		<%= link_to article_line.title, article_path_for(article_line) %>
		<% if with_time ||= false %> <nobr><span class="timeago"><%= time_ago_in_words(article_line.updated_at) %></span></nobr><% end %>
	</span>
	<% unless without_excerpt ||= false %>
		<%= format_article(article_line, :without_intro => true, :truncate => 35) %>
	<% end %>
<% end %>