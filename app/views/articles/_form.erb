<%= f.label :content %>
<%= error_message_on @article, :content %>
<%= f.text_area :content %>
<br />
<%= render :partial => 'pictures/form' %>
<br />
<% unless @article.published? %>
	<%= f.label :blog_id, 'Publish to blog:'%>
	<%= f.select :blog_id, @author.all_blogs.map{|b| [ b.name, b[:id] ] }, :include_blank => true %>
	<br />
	<%= f.label :publish_at, 'Schedule publication for:' %>
	<%= f.datetime_select :publish_at, :start_year => Time.now.year, :include_blank => true %>
	<br />
<% end %>
<% if @article.new_record? || @article.draft? %>
<input type="submit" name="article[publish]" value="Publish Now" />
<% end %>

