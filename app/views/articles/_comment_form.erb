<% if logged_in? %>
	<% form_for :comment, comment, :url => comments_path_from_commentable(article), :html => { :class => 'commentForm', :method => 'post' } do |f| %>
		<fieldset>
			<legend>Comment on this article</legend>
			<%= render :partial => 'comments/form', :locals => { :f => f } %>
		</fieldset>
	<% end %>
<% else %>
	Please <%= link_to 'login', login_path %> to comment.
<% end %>
