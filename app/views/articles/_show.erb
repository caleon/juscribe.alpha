<% set_meta_keywords!(@article.tag_list) -%>
<% set_meta_author!(@author) -%>
<% set_link_author!(@author) -%>
<% set_meta_description!(truncate(strip_tags(@article.content), 200)) -%>
<% div_for @article do -%>
	<% if @article.primary_picture %>
		<a href="<%= picture_path_for(@article.primary_picture) %>" rel="lightbox[article_<%= @article.id %>]" class="article_picture_link" title="<%=h @article.primary_picture.caption.gsub(/\"/, "\"").gsub(/\'/, "\'") if @article.primary_picture.caption %>">
			<%= picture_for(@article) %>
			<%= caption_for(@article.primary_picture) %>
			<span class="picture-symbol">&nbsp;</span>
			<span class="zoomer">+</span>
		</a>
	<% end %>
		<%= format_article(@article) %>
		<%= byline_for(@article) %>
		
		<%= render :partial => 'articles/actions', :locals => { :article => @article } %>
<% end -%>	
