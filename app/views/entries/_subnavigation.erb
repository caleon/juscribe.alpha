<div class="sub navigation">
	<ul class="navigationList">
		<%= bread_el @user.display_name, @user %>
		<%= bread_el "Entries", user_entries_path(@user), :current => @entry.nil? || @entry.new_record? %>
		<%= bread_el truncate(@entry.display_name, 20), user_entry_path(@entry.to_path), :current => true if @entry && !@entry.new_record? %>
		<%= subnavi_el 'New Thoughtlet', new_user_entry_path(@user.to_path(true)), :current => controller.action_name == 'new' if this_is_viewer? %>
		<%= subnavi_el 'Edit', edit_user_entry_path(@entry.to_path), :current => controller.action_name == 'edit' if @entry && !@entry.new_record? && @entry.editable_by?(viewer) %>
		<%= subnavi_el 'Clip', new_user_entry_clip_path(@entry.to_path(true)) if @entry && !@entry.new_record? %>
		<%= navi_skin_info %>
	</ul>
</div>
