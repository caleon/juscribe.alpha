<% set_meta_keywords!(@user.name_and_nick, @article.title, (@article.blog.name rescue nil)) -%>
<% set_link_author!(@user) -%>
<% add_style_file(@layoutable.skin_file) -%>
<div id="msm_layout" class="msm_layout">
	<div id="msm_header">
		<%= rounded_shim(:top) %>
		<div class="msm_row">
			<div class="msm_column msm_column-a">
				<span class="timestamp">updated by <%= @user.display_name %> at <%= @article.updated_at.to_s %></span>
				<h2><%= @article.title %></h2>				
			</div>
			<div class="msm_column msm_column-b">
				<%= @article.tags.map(&:to_s).join(', ') %>
			</div>
		</div>
		<%= rounded_shim(:bottom) %>
	</div>
	
	<div id="msm_main_column" class="msm_column">
		<%= rounded_shim(:top) %>
		<div class="last msm_row" id="msm_row-1">
			<% form_for :article, @article, :html => { :class => 'articleForm', :method => :put, :multipart => true } do |f| %>
				<fieldset>
					<legend>Edit your article</legend>
					<%= render :partial => 'articles/form', :locals => { :f => f } %>
				</fieldset>
			<% end %>
		</div>
		<%= rounded_shim(:bottom) %>
	</div>
	
	<div id="msm_side_column" class="msm_column">
	<% with_options :layout => :framed do |framed| %>
		<%= framed.wrender :user %>
		<%= framed.wrender :pictures %>
		<%= framed.wrender :google_ads %>
		<%= framed.wrender 'blogs/latest_articles', :blog => @article.blog if @article.blog %>
	<% end %>
	</div>
</div>