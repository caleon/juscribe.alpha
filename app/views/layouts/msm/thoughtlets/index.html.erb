<% set_meta_keywords!(@user.display_name, 'thoughtlets') -%>
<% set_link_author!(@user.display_name) -%>

<% content_for :header do -%>
	<div class="msm_column msm_column-a">
		<h2><%= @page_title %></h2>
	</div>
	<div class="msm_column msm_column-b">
		
	</div>
<% end -%>	

<div class="msm_row" id="msm_row-1">
	<div id="msm_main_header">
		<span class="timestamp">Timestamp: <%= Time.now.to_s %></span>
	</div>

	<div class="msm_main_column-ab msm_main_column">
		<%= render :partial => 'thoughtlets/index',
		 					 :layout => wayout(:inner) %>
	</div>
	<%= rounded_shim(:bottom) %>
</div>

<div class="msm_row" id="msm_row-2">
	<div class="msm_main_column-ab msm_main_column msm_with_reg_wid">
		<%= render :text => 'browser here',
							 :layout => wayout(:widget) %>
	</div>
</div>
	
<% content_for :side_column do -%>
	<% with_options :layout => :framed do |framed| %>
		<%= framed.wrender :user %>
		<%= framed.wrender :google_ads %>
	<% end %>
<% end -%>
