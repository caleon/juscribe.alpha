<head>
	<meta http-equiv="Content-type" content="text/html; charset=utf-8">
		<title><%= APP[:name] %>: <%= main_record ? main_record.to_s : @page_title || 'Welcome' %></title>
	<% set_meta_keywords! 'blog', 'news', 'social' %>
	<%= meta_tags %>
	<%= link_tags %>
	<%= auto_discovery_link_tag if action_accepts?(:xml) %>
	
	<%= stylesheet_link_tag 'main', :cache => 'standard' %>
	<%= yield :extra_stylesheets %>
	<%= stylesheet_link_tag @skin_file if @skin_file %>

	<%= render :partial => 'shared/javascripts' unless @config[:scripts_at_bottom] %>
	
<% if print_scripts_block?(:top) %>
	<script type="text/javascript">
	<%= extra_behaviors %>
	<%= extra_scripts(:top) %>
	</script>
<% end %>
</head>
