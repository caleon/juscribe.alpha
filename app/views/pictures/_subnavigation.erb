<%= subnav_for(@depictable) %>
<%# bread_el 'Pictures', pictures_path_from_depictable(@depictable), :current => @picture.nil? || @picture.new_record?, :rel => controller.action_name != 'index' ? 'directory' : nil %>
<%= bread_el truncate(@picture.display_name, 20), picture_path_for(@picture), :current => true if @picture && !@picture.new_record? %>
<%= subnavi_el 'New Picture', picture_path_from_depictable(@depictable, :prefix => 'new') if @picture.nil? %>
<%= subnavi_el 'Edit', picture_path_for(@picture, :prefix => 'edit') if @picture && !@picture.new_record? && @picture.editable_by?(get_viewer) %>
