<?xml version="1.0" encoding="utf-8"?>
<records>
	<commentable type="<%= @commentable.class.class_name %>">
		<id><%= @commentable.id %></id>
	</commentable>
	<comments>
	<% @comments.each do |comment| %>
		<comment id="<%= comment.scoped_id %>">
			<replies_count><%= comment.replies_count %></replies_count>
		<% if comment.paragraph_hash %>
			<paragraph_hash><%= comment.paragraph_hash %></paragraph_hash>
		<% end %>
		<% comment.references.each do |ref| %>
			<reference_id><%= ref.scoped_id %></reference_id>
		<% end %>
		</comment>
	<% end %>
	</comments>
</records>