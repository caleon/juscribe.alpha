<%= add_behavior("td input", 'ToggleInfoField') %>
<tr>
	<th><%= f.label :recipient %></th>
	<td>
		<%= f.text_field :recipient, :disabled => !params[:recipient].nil?, :value => params[:recipient].to_param rescue nil %>
		<% if params[:recipient] -%><input type="hidden" name="recipient" value="<%= params[:recipient] %>" /><% end -%>
		<%= info_box_for @message, :recipient, "Nick of user you're messaging" %>
	</td>
<tr>
	<th><%= f.label :subject %></th>
	<td>
		<%= f.text_field :subject %>
		<%= info_box_for @message, :subject, "Subject of your message" %>
	</td>
</tr>
<tr>
	<th><%= f.label :body %></th>
	<td><%= f.text_area :body %></td>
</tr>
