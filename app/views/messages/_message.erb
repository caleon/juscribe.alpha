<% content_tag_for(html_tag ||= :li, message, :class => (message.read? ? 'message-read' : 'message-unread')) do %>
	<% unless (no_title ||= false) %>
		<%= link_to message.subject, message %><br />
	<% end %>
	<%=h (full_text ||= false) ? truncate(message.body, 30) : message.body %>
	<br /><br />
	from: <%= link_to message.sender.nick, message.sender %>
	<br />
	to: <%= link_to message.recipient.nick, message.recipient %>
<% end %>