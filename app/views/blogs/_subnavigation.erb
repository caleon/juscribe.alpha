<%= bread_el @bloggable.display_name, bloggable_path_for(@bloggable) %>
<%= bread_el 'Blogs', blogs_path_from_bloggable(@bloggable), :current => @blog.nil? || @blog.new_record? %>
<%= bread_el(truncate(@blog.name, 20), blog_path_for(@blog), :current => true) if @blog && !@blog.new_record? %>

<% unless bare ||= false %>
<%= subnavi_el 'New Blog', blog_path_from_bloggable(@bloggable, :prefix => :new), :current => controller.action_name == 'new' if @bloggable.editable_by?(viewer) %>
<%= subnavi_el 'Edit', blog_path_for(@blog, :prefix => :edit), :current => controller.action_name == 'edit' if @blog && !@blog.new_record? && @blog.editable_by?(viewer) %>
<%= subnavi_el 'Clip', clip_path_from_widgetable(@blog, :prefix => :new) if @blog && !@blog.new_record? %>
<%= subnavi_el 'New Article', article_path_from_blog(@blog, :prefix => :new) if @blog && !@blog.new_record? && @blog.editable_by?(viewer) %>
<% end %>